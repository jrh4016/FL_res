<resources>

    <attr name="checked" format="boolean"/>
    <attr name="checkMark" format="reference"/>

    <declare-styleable name="Header">
       	<attr name="left_button_type" format="integer" />   
       	<attr name="right_button_type" format="integer" />
       	<attr name="header_type" format="integer" />
       	<attr name="nav_type" format="integer" />
       	<attr name="user_button" format="integer" />
       	<attr name="back_button" format="integer" />
    </declare-styleable>


    <declare-styleable name="CheckableRelativeLayout">
        <!-- Indicates the initial checked state of this checkable layout. -->
        <attr name="checked"/>
        <!-- Drawable used for the check mark graphic. -->
        <attr name="checkMark"/>
        <!-- Gravity of the check mark icon. Can be combined -->
        <attr name="checkMarkGravity">
            <flag name="left" value="0x1"/>
            <flag name="right" value="0x2"/>
            <flag name="center_vertical" value="0x4"/>
            <flag name="bottom" value="0x8"/>
            <flag name="top" value="0x10"/>
        </attr>
    </declare-styleable>
</resources>