<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tablet_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="30dp"
            android:src="@drawable/fieldlocate_logo_login"
            android:contentDescription="@string/desc_logo"/>

        <TextView
            style="@style/Skeds.TextView.Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"/>

        <EditText
            android:id="@+id/user_name"
            style="@style/Skeds.TextView.Login.Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name_hint"
            android:inputType="textPersonName"
            android:paddingLeft="10dp">

            <requestFocus/>
        </EditText>

        <TextView
            style="@style/Skeds.TextView.Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"/>

        <EditText
            android:id="@+id/password"
            style="@style/Skeds.TextView.Login.Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:paddingLeft="10dp">
        </EditText>

        <CheckBox
            android:id="@+id/display_password"
            style="@style/Skeds.CheckBox.Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/btn_check_holo_light"
            android:drawablePadding="10dp"
            android:text="@string/display_password"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/tablet_login_button"/>

        <TextView
            style="@style/Skeds.TextView.Disclaimer"
            android:id="@+id/tablet_disclaimer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:text="@string/app_disclaimer"/>

    </LinearLayout>
</ScrollView>
