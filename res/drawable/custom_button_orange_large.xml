<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape 
        	android:shape="rectangle"
        	>
        	
        	<padding 
        		android:left="6dp"
        		android:right="6dp"
        		android:top="16dp"
        		android:bottom="16dp"
        		/>
        	
        	<solid
        	    android:color="#E08741"
        	    />

            <stroke 
            	android:width="3dp" 
            	android:color="#be753b"
            	/>
            <corners 
                android:radius="2dp"/>
        </shape>
    </item>
    
    <!--  State Focused -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape 
        	android:shape="rectangle"
        	>
            
          <padding 
        		android:left="6dp"
        		android:right="6dp"
        		android:top="16dp"
        		android:bottom="16dp"
        		/>
        	
        	<solid
        	    android:color="#E08741"
        	    />

            <stroke 
            	android:width="3dp" 
            	android:color="#be753b"
            	/>
            
        </shape>
    </item>

    
    <!--  State Pressed -->
    <item android:state_pressed="true">
        <shape 
        	android:shape="rectangle"
        	>
            
            <padding 
        		android:left="6dp"
        		android:right="6dp"
        		android:top="16dp"
        		android:bottom="16dp"
        		/>
        	
        	<solid
        	    android:color="#E08741"
        	    />

            <stroke 
            	android:width="3dp" 
            	android:color="#be753b"
            	/>
            
        </shape>
    </item>
</selector>