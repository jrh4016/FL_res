<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape 
        	android:shape="rectangle"
        	>      	
        	<padding 
        		android:left="6dp"
        		android:right="6dp"
        		android:top="8dp"
        		android:bottom="8dp"
        	/>
        	
            <corners android:radius="9dip" />
            <gradient 
     			android:startColor="#F2F2F2" 
     			android:endColor="#CCCCCC" 
        		android:angle="270"
        		android:left="5dp"
        		android:right="5dp" 
        	/> 
            <stroke 
            	android:width="1dp" 
            	android:color="#808080"
            />
            
        </shape>
    </item>
    
    <!--  State Focused -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape 
        	android:shape="rectangle"
        	>
            <corners android:radius="9dip" />
            
            
          <gradient 
     			android:startColor="#F2F2F2" 
     			android:endColor="#CCCCCC"  
        		android:angle="270"
        		android:left="5dp"
        		android:right="5dp" 
        	/> 
            <stroke 
            	android:width="1dp" 
            	android:color="#E08741"
            />
            
        </shape>
    </item>

    
    <!--  State Pressed -->
    <item android:state_pressed="true">
        <shape 
        	android:shape="rectangle"
        	>
            <corners android:radius="9dip" />
            <gradient 
     			android:startColor="#F2F2F2" 
     			android:endColor="#CCCCCC" 
        		android:angle="270"
        		android:left="10dp"
        		android:right="10dp" 
        	/> 
            <stroke 
            	android:width="1dp" 
            	android:color="#E08741"
            />
            
        </shape>
    </item>
</selector>