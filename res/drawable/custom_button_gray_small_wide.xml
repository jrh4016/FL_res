<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State Disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <padding android:bottom="8dp" android:left="30dp" android:right="30dp" android:top="8dp"/>

            <corners android:radius="9dip"/>

            <gradient android:angle="270" android:endColor="#9A9A9A" android:left="5dp" android:right="25dp" android:startColor="#CCCCCC"/>

            <stroke android:width="1sp" android:color="#808080"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <padding android:bottom="8dp" android:left="30dp" android:right="30dp" android:top="8dp"/>

            <corners android:radius="9dip"/>

            <gradient android:angle="270" android:endColor="#CCCCCC" android:left="5dp" android:right="25dp" android:startColor="#F2F2F2"/>

            <stroke android:width="1sp" android:color="#808080"/>
        </shape>
    </item>

    <!-- State Focused -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="9dip"/>

            <gradient android:angle="270" android:endColor="#CCCCCC" android:left="5dp" android:right="5dp" android:startColor="#F2F2F2"/>

            <stroke android:width="1dp" android:color="#E08741"/>
        </shape>
    </item>

    <!-- State Pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="9dip"/>

            <gradient android:angle="270" android:endColor="#CCCCCC" android:left="10dp" android:right="10dp" android:startColor="#F2F2F2"/>

            <stroke android:width="1dp" android:color="#E08741"/>
        </shape>
    </item>

</selector>