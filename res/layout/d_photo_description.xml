<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="6dp"
             android:paddingRight="6dp"
             android:paddingTop="18dp"
             android:paddingBottom="26dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/description"
            style="@style/Skeds.TextView.Dialog.PhotoDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/dialog_header_capture_photo_description_hint"
            android:lines="4"
            android:gravity="top"
            android:background="@drawable/textbox_standard" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addPhotoToPdf"
            android:textColor="@color/black"
            android:text="Add Photo to Invoice PDF"/>
    </LinearLayout>

</FrameLayout>