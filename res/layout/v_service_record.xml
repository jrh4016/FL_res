<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_list_item_standard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/month"
            style="@style/Skeds.TextView.CustomerEquipment.Service.Month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/day"
            style="@style/Skeds.TextView.CustomerEquipment.Service.Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/time"
            style="@style/Skeds.TextView.CustomerEquipment.Service.Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/divider_width"
        android:layout_height="match_parent"
        android:background="#c6c6c6"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"/>

    <!-- Appointment Name \n Appointment Time (Bold) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/primary_label"
            style="@style/Skeds.TextView.CustomerEquipment.Service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/condition_label"
            style="@style/Skeds.TextView.CustomerEquipment.Service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/secondary_label"
            style="@style/Skeds.TextView.CustomerEquipment.Service.Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>