<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/custom_background_gradient_white_upper"
	>
			
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:background="@android:color/transparent"
		>

	    <TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="6dp"
			android:text="FieldLocate"
			android:textColor="#7B7B7B"
			android:textSize="18sp"
			android:textStyle="bold"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="2dp"
			android:paddingTop="4dp"
			android:paddingBottom="4dp"
			/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_marginTop="6dp"
		>
	    
	    <View
			android:layout_width="fill_parent"
			android:layout_height="1dip"
			android:background="#c6c6c6"
			/>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:gravity="center" >

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#7B7B7B"
		    android:text="Switch from  " />
		
		<TextView
		    android:id="@+id/dialog_switch_from"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#7B7B7B"
		    android:text="(Production)" />
		
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#7B7B7B"
		    android:text="  to  " />
		
		<TextView
		    android:id="@+id/dialog_switch_to"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#7B7B7B"
		    android:text="(Beta)" />
		
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#7B7B7B"
		    android:text="  ?" />

	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:gravity="center" >

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#7B7B7B"
		    android:text="Currently:  " />
		
		<TextView
		    android:id="@+id/dialog_switch_currently"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#7B7B7B"
		    android:text="(Production)" />
		
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="6dp"
		android:gravity="center"
		>
	
		<EditText 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="6dp"
			android:paddingLeft="4dp"
			android:paddingRight="12dp"
			android:paddingBottom="4dp"
			android:hint="Beta URL"
			android:capitalize="sentences"
			android:textColor="#000000"
			android:textSize="16dp"
			android:textStyle="bold"
			android:id="@+id/dialog_switch_url"
			android:singleLine="true"
			android:gravity="top"
			android:background="@drawable/textbox_standard"
			android:layout_weight="1"
			/>
	</LinearLayout>
	
    <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_marginTop="6dp"
		>
	    
	    <View
			android:layout_width="fill_parent"
			android:layout_height="1dip"
			android:background="#c6c6c6"
			/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"

		android:layout_weight="0"
		android:paddingLeft="2dp"
		android:paddingRight="2dp"
		android:paddingTop="4dp"
		android:paddingBottom="4dp"
		android:background="@drawable/custom_background_gradient_white_lower"
		>
	
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:layout_marginLeft="3dp"
			android:focusable="true"
			android:id="@+id/dialog_switch_yes"
			android:text="Yes"
			android:textColor="#000000"
			android:textStyle="bold"
			android:textSize="12sp"
			android:background="@drawable/custom_button_gray_small_wide"
			android:layout_weight=".5"
			android:gravity="center"
			/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:layout_marginLeft="3dp"
			android:focusable="true"
			android:id="@+id/dialog_switch_default"
			android:text="Default"
			android:textColor="#000000"
			android:textStyle="bold"
			android:textSize="12sp"
			android:background="@drawable/custom_button_gray_small_wide"
			android:layout_weight=".5"
			android:gravity="center"
			/>
			
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight=".5"
			android:layout_marginTop="4dp"
			android:layout_marginLeft="3dp"
			android:focusable="true"
			android:id="@+id/dialog_switch_no"
			android:text="No"
			android:textColor="#000000"
			android:textStyle="bold"
			android:textSize="12sp"
			android:background="@drawable/custom_button_gray_small_wide"
			android:gravity="center"
			/>
	</LinearLayout>
</LinearLayout>