<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:sked="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_repeating_stripes"
    android:weightSum="1"
    >	
    
    <com.skeds.android.phone.business.Custom.Header
       	android:layout_width="fill_parent" 
       	android:layout_height="wrap_content"
       	android:id="@+id/activity_header"
       	android:paddingBottom="6dip"
       	
		sked:left_button_type="0"
		sked:right_button_type="14"
		sked:nav_type="0"
       	sked:user_button="1"
       	
       	
       	sked:back_button="1"
       	/>
    
    <com.handmark.pulltorefresh.library.PullToRefreshListView
		android:id="@+id/activity_customer_service_agreements_listview_location"
    	android:layout_width="fill_parent"
    	android:layout_height="0dip"
    	android:layout_weight="1"
    	android:fadingEdge="none"
    	/>
</LinearLayout>