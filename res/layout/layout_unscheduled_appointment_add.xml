<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:sked="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_repeating_stripes"
    android:weightSum="1"
    >
    
    <com.skeds.android.phone.business.Custom.Header
       	android:layout_width="fill_parent" 
       	android:layout_height="wrap_content"
       	android:id="@+id/activity_header"
       	android:paddingBottom="6dip"
		sked:left_button_type="0"
		sked:right_button_type="1"
		sked:nav_type="0"
       	sked:user_button="1"
       	sked:back_button="1"
		/>
    	
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:paddingLeft="6dp"
    	android:paddingRight="6dp"
    	android:paddingBottom="6dp"
    	android:weightSum="1"
    	>
    	
    	<ScrollView
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:fillViewport="true"
    		android:id="@+id/activity_unscheduled_appointment_add_scrollview"
    		>
    	
	    	<LinearLayout 
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:background="@drawable/custom_item_standard_list_item"
		    	android:layout_weight="1"
		    	android:orientation="vertical"
		    	>
		    	
		    	<LinearLayout 
		    		android:layout_width="fill_parent"
		    		android:layout_height="wrap_content"
		    		android:paddingTop="8dp"
			    	android:paddingBottom="8dp"
			    	android:weightSum="1"
			    	android:gravity="center_vertical"
			    	android:layout_marginLeft="8dp"
		    		>
		    		<TextView
		    			android:layout_width="fill_parent"
		    			android:layout_height="wrap_content"
		    			android:textSize="15sp"
		    			android:text="Company Name"
		    			android:textColor="#000000"
		    			android:id="@+id/activity_unscheduled_appointment_add_textview_company_name"
		    			android:textStyle="bold"
		    			/>
		    	</LinearLayout>
		    
			    <TableLayout
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_gravity="center_vertical"
			    	>
			    	
			    	<TableRow
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		>
			    	
			    		<View
							android:layout_width="fill_parent"
	  						android:layout_height="1dp"
	  						android:background="#c6c6c6"
	  						android:layout_weight="1"
							/>
			    	</TableRow>
			    	
			    	<TableRow
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		android:paddingTop="8dp"
			    		android:paddingBottom="8dp"
			    		>
			    	
			    		<LinearLayout
			    			android:layout_width="wrap_content"
			    			android:layout_height="wrap_content"
			    			android:orientation="vertical"
			    			android:layout_weight=".5"
			    			>
				    		
				    		<TextView
				    			android:layout_width="wrap_content"
				    			android:layout_height="wrap_content"
				    			android:layout_gravity="center_vertical"
				    			android:paddingLeft="8dp"
				    			android:text="Location"
				    			android:textStyle="bold"
				    			android:textColor="#000000"
				    			/>
				    		
				    		<TextView
				    			android:layout_width="match_parent"
				    			android:layout_height="wrap_content"
				    			android:layout_gravity="center_vertical"
				    			android:paddingLeft="8dp"
				    			android:text=""
				    			android:id="@+id/activity_unscheduled_appointment_add_textview_location_1"
				    			android:textColor="#000000"
				    			android:textSize="12dp"
				    			/>
				    		
				    		<TextView
				    			android:layout_width="wrap_content"
				    			android:layout_height="wrap_content"
				    			android:layout_gravity="center_vertical"
				    			android:paddingLeft="8dp"
				    			android:text=""
				    			android:id="@+id/activity_unscheduled_appointment_add_textview_location_2"
				    			android:textColor="#000000"
				    			android:textSize="12sp"
				    			/>
				    	</LinearLayout>
				    	
				    	<LinearLayout
				    		android:layout_width="wrap_content"
				    		android:layout_height="wrap_content"
				    		android:layout_weight=".5"
				    		android:layout_marginRight="8dp"
				    		android:gravity="right"
				    		android:layout_gravity="center_vertical"
				    		>
				    	
					    	<TextView
			    				android:layout_width="wrap_content"
			    				android:layout_height="wrap_content"
				    			android:gravity="center"
			    				android:focusable="true"
			    				android:background="@drawable/button_gray_small"
			    				android:id="@+id/activity_unscheduled_appointment_add_button_select_location"
			    				android:textSize="12sp"
			    				android:textStyle="bold"
			    				android:textColor="#000000"
			    				android:text="Select One"
			    				/>
		    			</LinearLayout>
			    	</TableRow>
			    	
			    	<TableRow
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		>
			    		<View
							android:layout_width="fill_parent"
	  						android:layout_height="1dp"
	  						android:background="#c6c6c6"
	  						android:layout_weight="1"
							/>
			    	</TableRow>
			    	
			    	<TableRow
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		android:paddingTop="8dp"
			    		android:paddingBottom="8dp"
			    		>
			    		<LinearLayout
			    			android:layout_width="wrap_content"
			    			android:layout_height="wrap_content"
			    			android:orientation="vertical"
			    			android:layout_weight=".5"
			    			>
				    		<TextView
				    			android:layout_width="wrap_content"
				    			android:layout_height="wrap_content"
				    			android:layout_gravity="center_vertical"
				    			android:paddingLeft="8dp"
				    			android:text="Appointment Type"
				    			android:textStyle="bold"
				    			android:textColor="#000000"
				    			/>
				    		
				    		<TextView
				    			android:layout_width="match_parent"
				    			android:layout_height="wrap_content"
				    			android:layout_gravity="center_vertical"
				    			android:paddingLeft="8dp"
				    			android:text=""
				    			android:id="@+id/activity_unscheduled_appointment_add_textview_appointment_type"
				    			android:textColor="#000000"
				    			android:textSize="12sp"
				    			/>
				    	</LinearLayout>
				    	
				    	<LinearLayout
				    		android:layout_width="wrap_content"
				    		android:layout_height="wrap_content"
				    		android:layout_weight=".5"
				    		android:layout_marginRight="8dp"
				    		android:gravity="right"
				    		android:layout_gravity="center_vertical"
				    		>
				    	
					    	<TextView
			    				android:layout_width="wrap_content"
			    				android:layout_height="wrap_content"
				    			android:gravity="center"
			    				android:focusable="true"
			    				android:background="@drawable/button_gray_small"
			    				android:id="@+id/activity_unscheduled_appointment_add_button_select_appointment_type"
			    				android:textSize="12sp"
			    				android:textStyle="bold"
			    				android:textColor="#000000"
			    				android:text="Select One"
			    				/>
		    			</LinearLayout>
			    	</TableRow>
			    	
			    	<View
							android:layout_width="fill_parent"
	  						android:layout_height="1dp"
	  						android:background="#c6c6c6"
	  						android:layout_weight="1"
							/>
			    	
			    	<TableRow
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		android:paddingTop="8dp"
			    		android:paddingBottom="8dp"
			    		android:visibility="visible"
			    		>
			    		<LinearLayout
			    			android:layout_width="wrap_content"
			    			android:layout_height="wrap_content"
			    			android:orientation="vertical"
			    			android:layout_weight=".5"
			    			>
				    		<TextView
				    			android:layout_width="wrap_content"
				    			android:layout_height="wrap_content"
				    			android:layout_gravity="center_vertical"
				    			android:paddingLeft="8dp"
				    			android:text="Priority"
				    			android:textStyle="bold"
				    			android:textColor="#000000"
				    			/>
				    		
				    		<TextView
				    			android:layout_width="match_parent"
				    			android:layout_height="wrap_content"
				    			android:layout_gravity="center_vertical"
				    			android:paddingLeft="8dp"
				    			android:text=""
				    			android:id="@+id/activity_add_appointment_textview_appointment_priority"
				    			android:textColor="#000000"
				    			android:textSize="12sp"
				    			/>
				    	</LinearLayout>
				    	
				    	<LinearLayout
				    		android:layout_width="wrap_content"
				    		android:layout_height="wrap_content"
				    		android:layout_weight=".5"
				    		android:layout_marginRight="8dp"
				    		android:gravity="right"
				    		android:layout_gravity="center_vertical"
				    		>
				    	
					    	<TextView
			    				android:layout_width="wrap_content"
			    				android:layout_height="wrap_content"
				    			android:gravity="center"
			    				android:focusable="true"
			    				android:background="@drawable/button_gray_small"
			    				android:id="@+id/activity_add_appointment_button_select_appointment_priority"
			    				android:textSize="12sp"
			    				android:textStyle="bold"
			    				android:textColor="#000000"
			    				android:text="Select One"
			    				/>
		    			</LinearLayout>
			    	</TableRow>
			    	
			    	<TableRow
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		>
			    	
			    		<View
							android:layout_width="fill_parent"
	  						android:layout_height="1dp"
	  						android:background="#c6c6c6"
	  						android:layout_weight="1"
							/>
			    	</TableRow>
	
			    	<TableRow
			    	    android:id="@+id/unscheduled_appointment_suggested_date_field"
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		android:paddingTop="8dp"
			    		android:paddingBottom="8dp"
			    		>
			    	
			    		<LinearLayout
			    			android:layout_width="wrap_content"
			    			android:layout_height="wrap_content"
			    			android:orientation="vertical"
			    			android:layout_weight=".5"
			    			>
				    		
				    		<TextView
				    			android:layout_width="wrap_content"
				    			android:layout_height="wrap_content"
				    			android:layout_gravity="center_vertical"
				    			android:paddingLeft="8dp"
				    			android:text="Suggested Date"
				    			android:textColor="#000000"
				    			android:textStyle="bold"
				    			/>
				    		
				    		<TextView
				    			android:layout_width="match_parent"
				    			android:layout_height="wrap_content"
				    			android:layout_gravity="center_vertical"
				    			android:paddingLeft="8dp"
				    			android:text=""
				    			android:id="@+id/activity_unscheduled_appointment_add_textview_start_date"
				    			android:textColor="#000000"
				    			android:textSize="12sp"
				    			/>
				    	</LinearLayout>
				    	
				    	<LinearLayout
				    		android:layout_width="wrap_content"
				    		android:layout_height="wrap_content"
				    		android:layout_weight=".5"
				    		android:layout_marginRight="8dp"
				    		android:gravity="right"
				    		android:layout_gravity="center_vertical"
				    		>
				    	
					    	<TextView
			    				android:layout_width="wrap_content"
			    				android:layout_height="wrap_content"
				    			android:gravity="center"
			    				android:focusable="true"
			    				android:background="@drawable/button_gray_small"
			    				android:id="@+id/activity_unscheduled_appointment_add_button_start_date"
			    				android:textSize="12sp"
			    				android:textStyle="bold"
			    				android:textColor="#000000"
			    				android:text="Set Date"
			    				/>
		    			</LinearLayout>
			    	</TableRow>
			    	<TableRow
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		>
			    	
			    		<View
							android:layout_width="fill_parent"
	  						android:layout_height="1dp"
	  						android:background="#c6c6c6"
	  						android:layout_weight="1"
							/>
			    	</TableRow>
                    <TableRow>



                        <TextView
                            android:id="@+id/lead_source_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="left"
                            android:text="No lead sources"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                            <TextView
                                android:id="@+id/source_lead_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_margin="5dp"
                                android:background="@drawable/custom_button_gray_small_wide"
                                android:focusable="true"
                                android:text="Add Source Lead"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                    </TableRow>
			    	<TableRow
			    		android:layout_width="fill_parent"
			    		android:layout_height="wrap_content"
			    		android:weightSum="1"
			    		android:paddingBottom="5dp"
			    		android:layout_marginTop="4dp"
			    		>
		
						<LinearLayout 
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical"
							android:weightSum="1"
							>
							
							<TextView
								android:layout_marginLeft="8dp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Notes"
								android:textStyle="bold"
								android:textColor="@android:color/black"
								/>
								
				    		<EditText
				    			android:paddingLeft="2dp"
				    			android:paddingRight="4dp"
				    			android:textSize="14sp"
				    			android:layout_marginLeft="8dp"
				    			android:layout_marginRight="8dp"
				    			android:gravity="top"
				    			android:lines="8"
				    			android:scrollbars="vertical"
								android:text=""
								android:id="@+id/activity_unscheduled_appointment_add_edittext_notes"
								android:textColor="#000000"
								android:background="@drawable/textbox_standard"
								android:layout_width="match_parent" 
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:focusable="true"
								android:focusableInTouchMode="true"
								/>
						</LinearLayout>
			    	</TableRow>
			    </TableLayout>


		    </LinearLayout>
	    </ScrollView>
    </LinearLayout>
</LinearLayout>